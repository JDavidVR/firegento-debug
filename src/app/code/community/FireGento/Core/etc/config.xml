<?xml version="1.0"?>
<config>
    <modules>
        <FireGento_Core>
            <version>1.0.0</version>
        </FireGento_Core>
    </modules>
    <global>
        <blocks>
            <firegento>
                <class>FireGento_Core_Block</class>
            </firegento>
        </blocks>
        <helpers>
            <firegento>
                <class>FireGento_Core_Helper</class>
            </firegento>
        </helpers>
        <models>
            <firegento>
                <class>FireGento_Core_Model</class>
            </firegento>
        </models>
    </global>
    <admin>
        <routers>
            <firegento>
                <use>admin</use>
                <args>
                    <module>FireGento_Core</module>
                    <frontName>firegento</frontName>
                </args>
            </firegento>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <mage_adminhtml>
                    <files>
                        <firegento>FireGento_Core.csv</firegento>
                    </files>
                </mage_adminhtml>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <firegento>
                            <children>
                                <check_rewrites>
                                    <title>Check Rewrites</title>
                                </check_rewrites>
                                <check_events>
                                    <title>Check Events</title>
                                </check_events>
                                <check_system>
                                    <title>System Check</title>
                                </check_system>
                                <phpinfo>
                                    <title>phpinfo()</title>
                                </phpinfo>
                            </children>
                        </firegento>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <firegento>
                                            <title>FIREGENTO</title>
                                        </firegento>                                            
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <firegento>
                    <file>firegento_core.xml</file>
                </firegento>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <firegento>
            <log>
                <log_file>firegento.log</log_file>
                <force_log>1</force_log>
                <firelogger>0</firelogger>
            </log>
        </firegento>
    </default>  
</config>